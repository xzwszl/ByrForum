<xzw.szl.byr.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/swipe">
    
     <LinearLayout 
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:orientation="horizontal">
        
	        <LinearLayout 
		        android:gravity="center"
		        android:layout_height="match_parent"
		        android:layout_width="40dp"
		        android:background="@color/big_red"
		        android:orientation="vertical">
	
		        <ImageView android:id="@+id/mark"
		            android:src="@drawable/star"
		            android:layout_width="20dp"
		            android:layout_height="30dp"
		            android:contentDescription="@string/image_desc"/>    
	    	</LinearLayout>
           
	        <LinearLayout 
		        android:gravity="center"
		        android:layout_height="match_parent"
		        android:layout_width="40dp"
		        android:background="@color/dark_gray"
		        android:orientation="vertical">
	
		        <ImageView android:id="@+id/trash"
		            android:src="@drawable/trash"
		            android:layout_width="20dp"
		            android:layout_height="30dp"
		            android:contentDescription="@string/image_desc"/>    
	    	</LinearLayout>
    </LinearLayout>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:padding="5dp"
	    android:background="?mainItemBackground">

	    <LinearLayout android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_gravity="center_vertical">
	        
		    <xzw.szl.byr.view.CircleImageView
		        android:id="@+id/mail_face"
		        android:layout_width="40dp"
		        android:layout_height="40dp"
		        android:focusable="false"/>
		    
		     <TextView android:id="@+id/mail_reply"
		        android:textSize="12sp"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:textColor="@color/daymainitembk"
		        android:background="@color/green"
		        android:minWidth="40dp"
		        android:gravity="center"
		        android:visibility="gone"/>
		    
	   	</LinearLayout>
	    
	    <RelativeLayout android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp">
	        
	        
	        <TextView android:id="@+id/mail_title"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:minHeight="30dp"
	            android:layout_marginBottom="5dp"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"
	            android:textSize="18sp"
	            android:textColor="?mainFontColor"/>
	        
			<TextView android:id="@+id/mail_id"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:textSize="14sp"
			    android:layout_alignParentLeft="true"
			    android:layout_below="@id/mail_title"
			    android:textColor="?subFontColor"/>
			 
			<TextView android:id="@+id/mail_time"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:textSize="14sp"
			    android:layout_alignParentRight="true"
			    android:layout_below="@id/mail_title"
			    android:textColor="?subFontColor"/>       
	    </RelativeLayout>
	</LinearLayout>
    
   
</xzw.szl.byr.swipe.SwipeLayout>